<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"

    >
    <!-- 资讯->导购-->
    <ImageView
        android:id="@+id/iv_imgurl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tv_carguide_title"
        android:textSize="18sp"
        android:textColor="#FFFF"
        android:text="新闻主题名字"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/iv_imgurl"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_Iastreplydate"
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/bbsname"
        android:text="2017-5-4"
        android:textSize="12sp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:text="出处"
        android:textSize="12sp"
        android:textColor="#FFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_imgurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bbsname"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/postusername"
    android:text="作者"
    android:textColor="#FFFF"
    android:textSize="12sp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/tv_Iastreplydate"
    android:layout_marginLeft="30dp"/>

    <!--replycount  回帖数量-->
    <TextView

        android:textColor="#FFFF"
        android:id="@+id/tv_replycount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="160评"

android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/iv_imgurl"
        android:layout_alignParentEnd="true" />
</RelativeLayout>