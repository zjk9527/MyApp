<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_jiayouzhan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"

    tools:context="com.zjk.my_app.app_activity.jiayouzhanActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView_Actionbar_Left2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onClickjiayuzhan"

            android:layout_height="match_parent"
            android:src="@drawable/titlebar_back"
            />
        <TextView
            android:id="@+id/textView_Actionbar_Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="#FFFF"
            android:gravity="center"
            android:text="今日油价"
            android:textSize="20sp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/state"
            android:text="湖北"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:layout_below="@+id/title"
        android:background="@color/title_color"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/a"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="89号汽油/升:"
    android:textSize="20sp"
    android:padding="10dp"/>
    <TextView
        android:id="@+id/oil89"
        android:text="价格"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/b"
        android:layout_below="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="92号汽油/升:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/oil92"
        android:text="价格"
        android:layout_below="@+id/oil89"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/c"
        android:layout_below="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95号汽油/升:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/oil95"
        android:text="价格"
        android:layout_below="@+id/oil92"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/c"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/d"
        android:layout_below="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="97号汽油/升:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/oil97"
        android:text="价格"
        android:layout_below="@+id/oil95"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/d"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/e"
        android:layout_below="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90号汽油/升:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/oil90"
        android:text="价格"
        android:layout_below="@+id/oil97"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/e"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/f"
        android:layout_below="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="93号汽油/升:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/oil93"
        android:text="价格"
        android:layout_below="@+id/oil90"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/f"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f"
        android:text=" 0 号柴油/升:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/oil0"
        android:text="价格"
        android:layout_below="@+id/oil93"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/g"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/h"
        android:layout_below="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新时间:"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/updatetime"
        android:text="价格"
        android:layout_below="@+id/oil0"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/h"
        android:textSize="20sp"
        android:padding="10dp"/>

</RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation_state"
        android:layout_gravity="right"
        android:fitsSystemWindows="true"

        app:menu="@menu/pump_menu_layout"/>
</android.support.v4.widget.DrawerLayout>
